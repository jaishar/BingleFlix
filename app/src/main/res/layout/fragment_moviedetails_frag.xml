<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#101010"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moviedetails_frag">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
         <ImageView
             android:id="@+id/backdropImage"
             android:elevation="-80dp"
             android:layout_width="match_parent"
             android:layout_height="180dp"/>
           <ImageButton
               android:id="@+id/backBtn"
               android:layout_marginTop="25dp"
               android:layout_marginLeft="24dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/back"
               android:src="@drawable/back" />

         <RelativeLayout
             android:id="@+id/relativeLayout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/backBtn"
             android:layout_marginLeft="30dp"
             android:layout_marginTop="95dp"
             android:layout_marginRight="27dp"
             android:elevation="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:fadingEdge="vertical"
                android:background="@drawable/rounded_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/poster"
                android:layout_width="90dp"
                android:layout_height="115dp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/card"
                android:orientation="vertical"
                android:paddingRight="10dp">


               <TextView
                   android:id="@+id/movietitle"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="3dp"
                   android:hint="Movie Title [UA]"
                   android:textColor="@android:color/white"
                   android:textColorHint="@android:color/white"
                   android:textSize="20sp"/>

               <TextView
                   android:id="@+id/genere"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="7dp"
                   android:hint="Genere: "
                   android:textColorHint="@android:color/white"
                   android:textSize="14sp" />

               <TableRow
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp">

                  <TextView
                      android:id="@+id/releaseYear"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:hint="Year"
                      android:textColor="#F4F4F4"
                      android:textColorHint="@android:color/white"
                      android:textSize="13sp" />

                  <TextView
                      android:id="@+id/duration"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:hint=". Duration"
                      android:textColor="#F4F4F4"
                      android:textSize="13sp"></TextView>
               </TableRow>

               <TableRow
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                  <TableRow
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                     <TextView
                         android:id="@+id/imdbrating"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="3dp"
                         android:hint="1/10"
                         android:textColor="#F4F4F4"
                         android:textColorHint="@android:color/white"
                         android:textSize="13sp" />

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_marginLeft="1dp"
                         android:src="@drawable/rating" />

                  </TableRow>

                  <TableRow
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp">

                     <TextView
                         android:id="@+id/userRating"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="3dp"
                         android:textColor="#F4F4F4"
                         android:textSize="13sp"
                         android:visibility="invisible" />

                     <ImageView
                         android:id="@+id/star"
                         android:layout_width="18dp"
                         android:layout_height="match_parent"
                         android:layout_marginLeft="2dp"
                         android:background="@drawable/rating"
                         android:backgroundTint="@android:color/darker_gray"
                         android:visibility="invisible" />

                  </TableRow>
               </TableRow>

            </LinearLayout>
         </RelativeLayout>

         <TableRow
             android:id="@+id/tableRow2"
             android:layout_below="@+id/relativeLayout"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="30dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/like"
                android:backgroundTint="@android:color/white"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="272dp" />

            <ImageButton
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="86dp"
                android:background="@drawable/dislike"
                android:backgroundTint="@android:color/white"
                tools:layout_editor_absoluteX="181dp"
                tools:layout_editor_absoluteY="272dp" />

            <ImageButton
                android:id="@+id/watchlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:background="@drawable/addto_watchlist"
                android:backgroundTint="@android:color/white"
                tools:layout_editor_absoluteX="306dp"
                tools:layout_editor_absoluteY="269dp" />

         </TableRow>

         <TableRow
             android:id="@+id/tableRow"
             android:layout_below="@+id/tableRow2"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="3dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

            <TextView
                android:id="@+id/likeTxtview"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Like"
                android:textColorHint="@android:color/white"></TextView>

            <TextView
                android:id="@+id/dislikeTxtview"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="67dp"
                android:gravity="center"
                android:hint="Dislike"
                android:textColorHint="@android:color/white"></TextView>

            <TextView
                android:id="@+id/watchlistTxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="56dp"
                android:gravity="center"
                android:hint="Watchlist"
                android:textColorHint="@android:color/white"></TextView>
         </TableRow>

         <androidx.core.widget.NestedScrollView
             android:id="@+id/scrollView2"
             android:layout_marginTop="27dp"
             android:layout_below="@+id/tableRow"
             android:layout_width="match_parent"
             android:layout_height="220dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/plot"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="Plot:"
                   android:textColorHint="@android:color/white"
                   android:textSize="14sp" />


               <TextView
                   android:id="@+id/actors"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:hint="Starring: "
                   android:textColorHint="@android:color/white"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/directors"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="3dp"
                   android:hint="Directors: "
                   android:textColorHint="@android:color/white"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/writers"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="3dp"
                   android:hint="Writers: "
                   android:textColorHint="@android:color/white"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/typeDesc"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="3dp"
                   android:textColorHint="@android:color/white"
                   android:textSize="14sp"
                   android:visibility="invisible" />

               <TextView
                   android:id="@+id/awards"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:textColorHint="@android:color/white"
                   android:textSize="14sp"
                   android:visibility="invisible" />
            </LinearLayout>
         </androidx.core.widget.NestedScrollView>

         <RelativeLayout
             android:id="@+id/relativeLayout2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="15dp"
             android:layout_below="@+id/scrollView2">

            <Button
                android:id="@+id/rateBtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@android:color/holo_blue_dark"
                android:text="Rate now" />

            <Button
                android:id="@+id/playBtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/rateBtn"
                android:background="@android:color/holo_blue_dark"
                android:text="Play" />
         </RelativeLayout>
      </RelativeLayout>
   </androidx.core.widget.NestedScrollView>

</FrameLayout>